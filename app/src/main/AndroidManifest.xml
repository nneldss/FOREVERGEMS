<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.demo.forevergems">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="FOREVER GEMS"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ForeverGems"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"/>

        <activity android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".brace"/>
        <activity android:name=".ear"/>
        <activity android:name=".ring"/>
        <activity android:name=".gold"/>
        <activity android:name=".neck"/>
        <activity android:name=".silver"/>
        <activity android:name=".csv"/>
        <activity android:name=".silverbracelet"/>
        <activity android:name=".silverearrings"/>
        <activity android:name=".silvernecklace"/>
        <activity android:name=".silverring"/>
    </application>

</manifest>